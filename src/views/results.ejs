<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados de tu búsqueda'}) %>
<body>
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- todos los productos -->
	<div >
		<div >
			<div >
				<h2 class="products-title">Resultados de la búsqueda: </h2>
			</div>
			<div class="col-12 col-sm-6 col-lg-3">
				<% for(let i = 0; i < products.length; i++) { %>
				<section class="product-box">
					<a href="/products/detail/<%= products[i].id%>"<%= products[i] %>>
						<figure class="product-box_image">
							<img src="/images/products/<%= products[i].image%>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$FINAL PRICE</h2>
							<span>DISCOUNT% OFF</span>
							<p><%= products[i].name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
				<% } %>
			</div>

			<div >
				<h2 style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
			</div>
			
		</div>
		<!-- /todos los productos -->

		<!-- footer -->
		<%- include('partials/footer') %>
	</div>	<!-- /footer -->

</body>